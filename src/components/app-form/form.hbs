<form class="form-basic mt-5">
    <div class="row">
        <div class="col-12 col-md-4">
            <div class="w-100">
                <label class="mb-2 d-block text">Достоинства</label>
                <textarea class="form-basic__input d-flex align-items-center w-100" placeholder="Что вам понравилось" data-textarea=""></textarea>
            </div>
        </div>
        <div class="col-12 col-md-4 mt-2 mt-md-0">
            <div class="w-100">
                <label class="mb-2 d-block text">Недостатки</label>
                <textarea class="form-basic__input d-flex align-items-center w-100 ps-3 pe-3" placeholder="Что вам не понравилось" data-textarea=""></textarea>
            </div>
        </div>
        <div class="col-12 col-md-4 mt-2 mt-md-0">
            <div class="w-100">
                <label class="mb-2 d-block text">Комментарий</label>
                <textarea class="form-basic__input d-flex align-items-center w-100 ps-3 pe-3" placeholder="Другие впечатления" data-textarea=""></textarea>
            </div>
        </div>
        <div class="col-12 col-md-4  mt-2 mt-md-5">
            <div class="w-100">
                <label class="mb-2 d-block text">Имя</label>
                <input class="form-basic__input d-flex align-items-center w-100 ps-3 pe-3" type="Введите ваше имя" placeholder="Имя" required="" />
            </div>
        </div>
        <div class="col-12 col-md-4  mt-2 mt-md-5">
            <div class="w-100">
                <label class="mb-2 d-block text">E-mail</label>
                <input class="form-basic__input d-flex align-items-center w-100 ps-3 pe-3" type="Ваш e-mail" placeholder="E-mail" required="" />
            </div>
        </div>
        <div class="col-12 col-md-4 flex-column  mt-2 mt-md-5">
            <fieldset>
                <legend class="mb-2 d-block text">Добавьте фото</legend>
                <input type="hidden" id="MAX_FILE_SIZE" name="MAX_FILE_SIZE" value="300000" />
            </fieldset>
            <div class="form-upload d-flex align-items-center position-relative cursor-pointer js-form-upload">
                <input type="file" id="fileselect" name="fileselect[]" multiple="multiple" class="cursor-pointer w-100 h-100" />
                <div class="d-flex align-items-center" id="filedrag">
                    <div class="me-3 svg-block">
                        {{> _images/photo }}
                    </div>
                    <p class="text-primary color-grey-dark"> <span class="color-pink">Нажмите на ссылку&nbsp;</span>или перетащите фото сюда</p>
                </div>
            </div>
            <div class="d-flex align-items-center"></div>
            <div id="messages" class="mt-3"></div>
        </div>
    </div>
    <button class="btn btn-gradient mt-4 mt-md-5" type="submit">Отправить </button>
</form>